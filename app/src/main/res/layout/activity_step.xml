<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sh.mycanvas.activity.StepActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:orientation="vertical"
        android:gravity="center">
        <com.sh.mycanvas.view.StepView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stepView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center">
        <com.sh.mycanvas.view.VerticalStepView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stepView2"/>
    </LinearLayout>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_next"
        android:text="next"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="64dp"
        android:layout_height="wrap_content">
        <com.sh.mycanvas.view.CircleStepView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circleStepOne"/>
        <View
            android:id="@+id/stepLineOne"
            android:background="#D8D8D8"
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <com.sh.mycanvas.view.CircleStepView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circleStepTwo"/>
    </LinearLayout>

</LinearLayout>
